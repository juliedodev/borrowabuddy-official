<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="emailForm/vendor/css-hamburgers/hamburgers.min.css">
<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="emailForm/vendor/select2/select2.min.css">
<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="emailForm/css/util.css">
	<link rel="stylesheet" type="text/css" href="emailForm/css/main.css">
<!--===============================================================================================-->
</head>
<body>

	<div class="bg-contact100" style="background-image: url('emailForm/images/bg-01.jpg');">
		<div class="container-contact100">
			<div class="wrap-contact100">
				<div class="contact100-pic js-tilt" data-tilt>
					<img src="emailForm/images/img-01.png" alt="IMG">
				</div>

				<form action ="/sendEmail" method ="POST" class="contact100-form validate-form">
					<span class="contact100-form-title">
						Get in touch
					</span>

					<input type ="hidden" class="userSendEmail" name ="serSendEmail" value ="<%= user.local.email %>">

					<div class="wrap-input100 validate-input" data-validate = "Name is required">
						<input class="input100" type="text" name="name" placeholder="Name" value = <%= user.local.displayName %>>
						<span class="focus-input100"></span>
						<span class="symbol-input100">
							<i class="fa fa-user" aria-hidden="true"></i>
						</span>
					</div>

					<div class="wrap-input100" data-validate = "Valid email is required: ex@abc.xyz">


						<% let emailArray = [] %>
						
						<% for(let i = 0; i < volunteers.length; i++) { %>

						 <% console.log(volunteers[i].email) %>
						 <% emailArray.push(volunteers[i].email) %>
						 <% console.log(emailArray) %>
						<% } %>

						<% let emailSet = new Set(emailArray) %>
						<% let uniqueArray = [...emailSet] %>

						<% console.log(uniqueArray) %>
						
						<input class="input100" type="text" name="email" placeholder="Email"
						value = '<%= uniqueArray.join(", ") %>'
						>




						<span class="focus-input100"></span>
						<span class="symbol-input100">
							<i class="fa fa-envelope" aria-hidden="true"></i>
						</span>
					</div>

					<div class="wrap-input100 validate-input" data-validate = "Message is required">
						<textarea class="input100" name="message" placeholder="Message"></textarea>
						<span class="focus-input100"></span>
					</div>

					<div class="container-contact100-form-btn">
						<button class="contact100-form-btn buttonSendEmail">
							Send
						</button>
					</div>
				</form>
			</div>
		</div>
	</div>






